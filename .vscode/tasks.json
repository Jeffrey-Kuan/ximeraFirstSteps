{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "PDF",
            "task": "compilePdf",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              },            
            "args": [
                "compilePdf",
                "${relativeFile}"
            ],
        },
        {
            "type": "shell",
            "task": "compileHtml",
            "label": "HTML",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              },             
            "args": [
                "--",
                "--skip-mathjax",
                "compile",
                "${relativeFile}"
            ],
        },
        {
            "type": "shell",
            "label": "Bake",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "--",
                "--skip-mathjax",
                "bake",
            ],
        },
        {
            "type": "shell",
            "task": "clean",
            "label": "Clean",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "clean",
            ],
        },
        {
            "type": "shell",
            "label": "Bake handout",
            "task": "bakehandout",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "bakehandout",
            ],
        },
        {
            "type": "shell",
            "label": "Clean handout",
            "task": "cleanhandout",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "cleanhandout",
            ],
        },
        {
            "type": "shell",
            "label": "XimerServer",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "ximeraserver",
            ],
        },
        {
            "type": "shell",
            "label": "Serve",
            "command": "./scripts/xmlatex",
            "windows": {
                "command": ".\\scripts\\xmlatex.bat"
              }, 
            "args": [
                "serve",
            ],
        },
    ]
}